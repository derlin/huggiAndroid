<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <View
            style="@style/Divider"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/fl_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:paddingEnd="10sp"
                android:layout_weight=".5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hugs"
                android:layout_gravity="center_vertical"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/nbr_of_hugs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:paddingStart="10sp"
                android:layout_weight=".5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="120"
                android:textSize="70sp"
                android:textColor="@android:color/holo_green_light" />

        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/top_hugger_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TOP 3 Huggers"
            android:padding="10sp"
            android:gravity="center"
            android:textStyle="bold|italic" />


        <include
            android:id="@+id/top_hugger_1"
            layout="@layout/adapter_hugslist_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/top_hugger_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/adapter_hugslist_item" />

        <include
            android:id="@+id/top_hugger_3"
            layout="@layout/adapter_hugslist_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>
